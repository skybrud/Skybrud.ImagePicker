{
  "tasks": {
    "postBuild": [
      {
        "alias": "zip",
        "destination": "releases/github/{packageName}.v{version}.zip",
        "files": [
          {
            "source": "src/{packageName}/bin/Release/net472/",
            "destination": "bin/",
            "patterns": [
              "{packageName}.dll",
              "{packageName}.xml"
            ]
          },
          {
            "source": "src/{packageName}/App_Plugins/Skybrud.ImagePicker",
            "destination": "App_Plugins/Skybrud.ImagePicker/",
            "patterns": [
              "**/*.js",
              "**/*.css",
              "**/*.html",
              "**/*.xml",
              "package.manifest"
            ]
          },
          {
            "source": "src",
            "patterns": [
              "LICENSE.html"
            ]
          }
        ]
      }
    ]
  }
}